<div class="recommendations">
    <h4 class="recommendations__h">Рекомендовані<span class="recommendations__count">{{ events|length }}</span>:</h4>
    <ul class="event-list event-list_aside">
        {% for event in events %}
            <li class="event-list__item">
                <a href="{{ path('event_show', { 'slug': event.slug }) }}" class="event-list__link">
                    <img src="{{ vich_uploader_asset(event, 'imageFile') }}" alt="{{ event.name }}" class="event-list__img" height="200px">
                    <div class="event-list__price">$100 - $150</div>
                    <section class="event-list__details">
                        <h3 class="event-list__group">{{ event.name }}</h3>
                        <p class="event-list__place pin-icon-t">{{ event.city }}, {{ event.address }}</p>
                        <p class="event-list__time time-icon-t">{{ event.beginAt|localizeddate('full', 'none', app.request.locale) }}</p>
                    </section>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>

