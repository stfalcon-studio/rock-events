{% extends 'base.html.twig' %}

{% block body %}
    <h3>Жанри</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Назва</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="table table-hover">
        {% for genre in genres %}
            <tr>
                <td><a href="{{ path('genre_group',{ 'slug' : genre.slug }) }}">{{ genre.name }}</a></td>
                {% if app.user %}
                    <td>
                        {% include '@App/frontend/genre/bookmark_genre.html.twig' with { 'genre': genre, 'userGenres': userGenres } %}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/genre.js') }}"></script>
{% endblock %}
