{% extends 'base.html.twig' %}

{% block body %}
    <h3>Жанри</h3>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Назва</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="table table-hover">
        {% for genre in genres %}
            <tr id="{{ genre.slug }}">
                <td>
                    <a href="{{ path('genre_group',{ 'slug' : genre.slug }) }}">{{ genre.name }}</a></td>
                <td>
                    <button href="#"
                            class="delete-genre"
                            data-genre-slug="{{ path('genre_delete_from_bookmark', { 'slug' : genre.slug,}) }}">-
                    </button>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/genre.js') }}"></script>
{% endblock %}
