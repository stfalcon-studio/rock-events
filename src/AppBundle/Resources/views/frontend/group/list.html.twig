{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список Гуртів</h1>
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Назва</th>
            <th>Опис</th>
            <th>Рік створення</th>
            <th></th>
        </tr>
        </thead>
        <tbody class="table table-hover">
        {% for group in groups %}
            <tr id="groups">
                <td><a href="{{ path('group_show',{ 'slug' : group.slug }) }}">{{ group.name }}</a></td>
                <td>{{ group.description }}</td>
                <td>{{ group.foundedAt|date("Y") }}</td>
                {% if app.user %}
                    <td>
                        {% include '@App/frontend/group/bookmark_group.html.twig' with { 'group': group, 'userGroups': userGroups } %}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/group.js') }}"></script>
{% endblock %}
