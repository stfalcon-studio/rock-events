<aside class="group-concerts-list f-r">
    <h4 class="group-concerts-list__header calendar-icon-t">
        <a href="{{ path('group_event', { 'slug': group.slug }) }}" style="color: white;">Майбутні концерти</a>
    </h4>
    <ul class="group-concerts-list__items">
        {% for event in events %}
            <li class="group-concerts-list__item ">
                <a href="{{ path('event_show', { 'slug': event.slug }) }}" class="group-concerts-list__link cf">
                    <p class="group-concerts-list__place">
                        {{ event.country }}, {{ event.city }}
                        <span class="group-concerts-list__date ">
                                {{ event.beginAt|localizeddate('full', 'none', app.request.locale) }}
                            </span>
                    </p>
                    <p class="group-concerts-list__price f-r">$120-500</p>
                </a>
            </li>
        {% endfor %}
    </ul>
</aside>
